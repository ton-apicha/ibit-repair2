# ========================================
# iBit Repair Frontend Environment Configuration
# ========================================
# 
# คัดลอกไฟล์นี้เป็น .env.local และปรับแต่งค่าตามสภาพแวดล้อมของคุณ
# 
# ตัวอย่าง:
#   cp env.example .env.local
#   cp env.example .env.development.local
#   cp env.example .env.production.local

# ========================================
# API Configuration
# ========================================

# Backend API URL
# ใน development: http://localhost:4000
# ใน production: https://api.yourdomain.com
NEXT_PUBLIC_API_URL="http://localhost:4000"

# API Timeout (milliseconds)
NEXT_PUBLIC_API_TIMEOUT=30000

# ========================================
# Application Configuration
# ========================================

# ชื่อแอปพลิเคชัน
NEXT_PUBLIC_APP_NAME="iBit Repair"

# เวอร์ชันแอปพลิเคชัน
NEXT_PUBLIC_APP_VERSION="1.0.0"

# Environment
NEXT_PUBLIC_NODE_ENV="development"

# ========================================
# Feature Flags
# ========================================

# เปิด/ปิด features ต่างๆ
NEXT_PUBLIC_ENABLE_REGISTRATION=true
NEXT_PUBLIC_ENABLE_PASSWORD_RESET=true
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_DEBUG_MODE=true

# ========================================
# UI/UX Configuration
# ========================================

# Theme Configuration
NEXT_PUBLIC_DEFAULT_THEME="light"
NEXT_PUBLIC_ENABLE_DARK_MODE=true

# Language Configuration
NEXT_PUBLIC_DEFAULT_LANGUAGE="th"
NEXT_PUBLIC_SUPPORTED_LANGUAGES="th,en,zh"

# ========================================
# Performance Configuration
# ========================================

# Enable/Disable features for performance
NEXT_PUBLIC_ENABLE_LAZY_LOADING=true
NEXT_PUBLIC_ENABLE_IMAGE_OPTIMIZATION=true
NEXT_PUBLIC_ENABLE_SERVICE_WORKER=false

# ========================================
# Development Configuration
# ========================================

# เปิด debug mode
NEXT_PUBLIC_DEBUG=true

# เปิด request logging
NEXT_PUBLIC_ENABLE_REQUEST_LOGGING=true

# Mock API สำหรับ development
NEXT_PUBLIC_MOCK_API=false

# ========================================
# Analytics & Monitoring
# ========================================

# Google Analytics (Optional)
NEXT_PUBLIC_GA_TRACKING_ID=""

# Sentry Error Tracking (Optional)
NEXT_PUBLIC_SENTRY_DSN=""

# ========================================
# External Services
# ========================================

# CDN URL สำหรับ static assets
NEXT_PUBLIC_CDN_URL=""

# WebSocket URL (สำหรับ real-time features)
NEXT_PUBLIC_WS_URL=""

# ========================================
# Security Configuration
# ========================================

# Content Security Policy
NEXT_PUBLIC_CSP_REPORT_URI=""

# HSTS Configuration
NEXT_PUBLIC_HSTS_ENABLED=false
